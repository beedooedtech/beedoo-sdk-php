<phpunit colors="true">
	<testsuites>
		<testsuite name="example">
			<directory>
				tests
			</directory>
		</testsuite>
		<testsuite name="unit">
			<directory>
				tests/Unit
			</directory>
		</testsuite>
		<testsuite name="integration">
			<directory>
				tests/Integration
			</directory>
		</testsuite>
	</testsuites>
	<coverage cacheDirectory="/tests" includeUncoveredFiles="true" processUncoveredFiles="true" pathCoverage="false" ignoreDeprecatedCodeUnits="true" disableCodeCoverageIgnore="true">
	</coverage>
</phpunit>
